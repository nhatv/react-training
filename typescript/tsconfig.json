    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./output/index.js",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
